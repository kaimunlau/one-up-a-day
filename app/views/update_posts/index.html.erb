<div class="flex flex-col gap-4">
  <% @update_posts.each do |post| %>
    <div class="post">
      <h2><%= post.user.first_name %> has <%= post.title %></h2>
      <div class="flex justify-between">
        <p><%= link_to 'Show', "#" %></p>
        <p><%= link_to 'Edit', "#" %></p>
        <p><%= link_to 'Destroy', "#", method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  <% end %>
</div>
