<div class="fixed inset-0 flex items-center justify-center hidden bg-black bg-opacity-50" data-modal-target="modal">
  <div class="p-8 bg-white rounded-md shadow-md">
    <h2>What have you done today?</h2>
    <form data-controller="new-post" data-action="submit->new-post#handleSubmit">
      <label for="title">Today I have...</label>
      <input type="text" name="title" id="title" placeholder="eaten a sandwich" class="w-full py-2 border rounded cursor-pointer bg-slate-200">
      <label for="content">More details:</label>
      <textarea name="content" id="content" placeholder="my sandwich was delicious and I will do it again" class="w-full py-2 border rounded cursor-pointer bg-slate-200"></textarea>
      <label for="tags">Tags:</label>
      <select data-new-post-target="select" class="w-full" name="tags" id="tags" multiple data-tag-target="select"></select>
      <input type="submit">
      <button data-action="click->modal#close:stop:prevent">Cancel</button>
    </form>
  </div>
</div>
