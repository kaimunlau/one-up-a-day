<div class="p-4 transition-all border shadow bg-secondary hover:shadow-md rounded-xl">
  <div class="flex items-baseline justify-between mb-3">
    <h2><span class="font-bold"><%= post.user.first_name %></span> has <%= post.title %></h2>
    <p class="pl-2 text-sm"><%= link_to 'Details', "#" %></p>
  </div>
  <div class="text-right">
    <% post.tags.each do |tag| %>
      <%= render "shared/tag", tag: tag %>
    <% end %>
  </div>
</div>
