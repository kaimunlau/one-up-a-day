<header class="border-b shadow bg-accent">
  <div class="container flex items-center justify-between px-5 py-3 mx-auto">
    <%= link_to OneUpADay, root_path, class: "text-2xl font-bold" %>
    <nav>
      <% if user_signed_in? %>
        <button class="px-4 py-1 transition-all shadow rounded-xl hover:bg-background hover:shadow-md bg-primary" data-action="click->modal#newUpdate">New Update</button>
        <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path %>
      <% end %>
    </nav>
  </div>
</header>
