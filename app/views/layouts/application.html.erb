  </head>

  <body>
    <%= render "shared/navbar" %>
    <main class="container w-3/4 px-5 mx-auto mt-28">
      <%= yield %>
    </main>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
